{
  "manifest_version": 2,

  "name": "SafeBlock",
  "description": "This extension blocks bad content through YouTube comments",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
      "content_scripts": [{
      "js": ["myscript.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
